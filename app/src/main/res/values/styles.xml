<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="Theme.ObjHunt" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>
        <item name="android:textColorPrimary">@color/textColorPrimary</item>

        <!-- Ripple effect. -->
        <item name="android:colorControlHighlight">@color/rippleColorButtons</item>

        <item name="materialAlertDialogTheme">@style/AlertDialogOnExit</item>
    </style>

    <!--    Text Input   -->
    <style name="Widget.ObjHunt.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="hintTextAppearance">@style/TextAppearance.ObjHunt.TextInputLayout.HintText
        </item>
        <item name="hintTextColor">@color/textColorPrimary</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="boxStrokeColor">@color/textInputOutlineColor</item>
    </style>

    <style name="TextAppearance.ObjHunt.TextInputLayout.HintText" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

    <!--    End Text Input  -->

    <!--    Clickable   -->
    <style name="Widget.ObjHunt.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="backgroundTint">?attr/colorPrimaryDark</item>
        <item name="rippleColor">@color/rippleColorButtons</item>
    </style>


    <style name="Widget.ObjHunt.BottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="android:background">@color/colorPrimaryDark</item>
        <item name="itemRippleColor">@color/rippleColorButtons</item>
        <item name="labelVisibilityMode">labeled</item>
        <item name="itemIconTint">@drawable/bottom_navigation_item_color</item>
        <item name="itemTextColor">@drawable/bottom_navigation_item_color</item>
    </style>

    <!--    End Clickable  -->

    <style name="TextAppearance.ObjHunt.Title" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/titleColor</item>
    </style>

    <style name="TextAppearance.ObjHunt.Title.Small" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/titleColor</item>
    </style>

    <style name="TextAppearance.ObjHunt.Profile.Title" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/casualTextColor</item>
        <item name="android:textSize">30sp</item>
    </style>

    <style name="TextAppearance.ObjHunt.Profile.Simple.Dark.Text" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">30sp</item>
    </style>

    <style name="TextAppearance.ObjHunt.Profile.Simple.NoScore.Text" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/casualTextColor</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="TextAppearance.ObjHunt.Profile.Simple.Light.Text" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">30sp</item>
    </style>

    <style name="TextAppearance.ObjHunt.Profile.Simple.Light.Text.Small" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="TextAppearance.ObjHunt.Light.Title" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/backgroundText</item>
        <item name="android:textSize">40dp</item>
    </style>

    <style name="TextAppearance.ObjHunt.Light.Header" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/backgroundText</item>
        <item name="android:textSize">30sp</item>3
    </style>

    <style name="TextAppearance.ObjHunt.Light.Item" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">23sp</item>
    </style>

    <style name="CustomToolBar" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:windowActionBarOverlay">true</item>
        <item name="windowActionBarOverlay">true</item>
    </style>

    <style name="Widget.ObjHunt.ListView" parent="Widget.AppCompat.ListView">
        <item name="android:backgroundTint">@color/colorPrimaryDark</item>
        <item name="android:cacheColorHint">@android:color/transparent</item>
        <item name="android:divider">@color/colorAccent</item>
        <item name="android:dividerHeight">2dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Widget.ObjHunt.ListView.REC" parent="Widget.AppCompat.ListView">
        <item name="android:backgroundTint">@color/colorPrimaryDark</item>
        <item name="android:cacheColorHint">@android:color/transparent</item>
        <item name="android:divider">@color/colorAccent</item>
        <item name="android:dividerHeight">2dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Theme.ObjHunt.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AlertDialogStyle" parent="Theme.AppCompat.Dialog">
        <item name="android:colorAccent">#800808</item>
        <item name="android:textColor">#800808</item>
        <item name="android:textColorPrimary">@color/colorPrimaryDark</item>
    </style>

    <style name="AlertDialogOnExit" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="colorSurface">#212121</item>
        <item name="materialAlertDialogTitleTextStyle">@style/TitleTextStyle</item>
        <item name="materialAlertDialogTitleIconStyle">@style/TitleIconStyle</item>
        <item name="materialAlertDialogBodyTextStyle">@style/BodyTextStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
        <item name="buttonBarNeutralButtonStyle">@style/NeutralButtonStyle</item>
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
    </style>

    <style name="TitleIconStyle" parent="MaterialAlertDialog.MaterialComponents.Title.Icon">
        <item name="android:tint">#D12424</item>
        <item name="android:layout_marginRight">10dp</item>
    </style>

    <style name="TitleTextStyle" parent="MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="BodyTextStyle" parent="MaterialAlertDialog.MaterialComponents.Body.Text">
        <item name="android:padding">16dp</item>
        <item name="android:textColor">#F3F3F3</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="PositiveButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/selectedMenuButton</item>
        <item name="rippleColor">@color/selectedMenuButtonDark</item>
    </style>

    <style name="NegativeButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">#C21919</item>
        <item name="rippleColor">#8D1515</item>
    </style>

    <style name="NeutralButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">#1F41E2</item>
        <item name="rippleColor">#113391</item>
    </style>

    <style name="Theme.ObjHunt.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.ObjHunt.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="TextAppearance.ObjHunt.Pause.Simple.Dark.Text" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">30sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="FullHeightDialog" parent="@style/Base.Theme.AppCompat.Light.Dialog">
        <item name="android:windowBackground">@drawable/border_line</item>
        <item name="android:windowTitleStyle">@style/TextAppearance.ObjHunt.Pause.Simple.Dark.Text</item>
        <item name="android:backgroundDimAmount">0.88</item>
        <item name="android:layout_gravity">center</item>
    </style>
</resources>

