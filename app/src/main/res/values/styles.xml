<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="Theme.ObjHunt" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>
        <item name="android:textColorPrimary">@color/textColorPrimary</item>

        <!-- Ripple effect. -->
        <item name="android:colorControlHighlight">@color/rippleColorButtons</item>
    </style>

<!--    Text Input   -->
    <style name="Widget.ObjHunt.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="hintTextAppearance">@style/TextAppearance.ObjHunt.TextInputLayout.HintText</item>
        <item name="hintTextColor">@color/textColorPrimary</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="boxStrokeColor">@color/textInputOutlineColor</item>
    </style>

    <style name="TextAppearance.ObjHunt.TextInputLayout.HintText" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

<!--    End Text Input  -->

<!--    Clickable   -->
    <style name="Widget.ObjHunt.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="backgroundTint">?attr/colorPrimaryDark</item>
        <item name="rippleColor">@color/rippleColorButtons</item>
    </style>


    <style name="Widget.ObjHunt.BottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="android:background">@color/colorPrimaryDark</item>
        <item name="itemRippleColor">@color/rippleColorButtons</item>
        <item name="labelVisibilityMode">labeled</item>
        <item name="itemIconTint">@drawable/bottom_navigation_item_color</item>
        <item name="itemTextColor">@drawable/bottom_navigation_item_color</item>
    </style>

<!--    End Clickable  -->

    <style name="TextAppearance.ObjHunt.Title" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/titleColor</item>
    </style>

    <style name="TextAppearance.ObjHunt.Profile.Title" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/casualTextColor</item>
        <item name="android:textSize">30dp</item>
    </style>

    <style name="TextAppearance.ObjHunt.Profile.Simple.Text" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/backgroundText</item>
        <item name="android:textSize">30dp</item>
    </style>

    <style name="CustomToolBar" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:windowActionBarOverlay">true</item>
        <item name="windowActionBarOverlay">true</item>
    </style>

    <style name="Widget.ObjHunt.ListView" parent="Widget.AppCompat.ListView">
        <item name="android:backgroundTint">@color/colorPrimaryDark </item>
        <item name="android:cacheColorHint">@android:color/transparent</item>
        <item name="android:divider">@color/colorAccent</item>
        <item name="android:dividerHeight">2dp</item>
        <item name="android:textStyle">bold</item>
    </style>
    
</resources>

